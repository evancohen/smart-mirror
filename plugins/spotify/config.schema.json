{
  "schema": {
    "spotify": {
      "type": "object",
      "title": "{{title}}",
      "properties": {
        "timeout": {
          "type": "number",
          "title": "{{refresh cycle}}",
          "default":10000
        },
        "default_device": {
          "type": "string",
          "title": "{{default device}}",
          "default": "raspberry"
        },
        "position": {
          "type": "string",
          "title": "Default status indicator position ('top' or 'bottom')",
          "enum": ["bottom","top"]
        },
        "creds": {
          "type": "object",
          "properties": {
            "clientID": {
              "default": "",
              "type": "string",
              "title": "{{clientid}}",
              "description":"{{clientid desc}}"
            },
            "clientSecret": {
              "default": "",
              "type": "string",
              "title": "{{client secret}}"
            }
          }
        },
        "authorization_uri": {
          "type": "object",
          "properties": {
            "scope": {
              "default": "user-read-private user-read-email streaming user-read-currently-playing user-modify-playback-state user-read-playback-state",
              "type": "string",
              "title": "{{Scope}}"
            },
            "state": {
              "default": "3(#0/!~",
              "type": "string",
              "title": "{{State}}"
            }
          }
        }
      }
    }
  },
  "form":[
    {
      "type":"fieldset",
      "title":"{{title}}",
      "expandable":true,
      "order":0,
      "items": [
        "spotify.creds",
        "spotify.authorization_uri",
        {
            "type": "help",
            "helpvalue": "{{auth help}}"
        },
        "spotify.timeout",
        "spotify.default_device",
        "spotify.position"
      ]
    }
  ],
  "value":{
    "spotify":{
      "timeout": 10000,
      "default_device": "raspberry",
      "position": "top",
      "authorization_uri": {
        "response_type": "code",
        "scope": "activity nutrition profile settings sleep social weight heartrate",
        "state": "3(#0/!~"
        }
    }
  }
}
